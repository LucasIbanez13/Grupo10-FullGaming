<header class="home-header">
  <div class="home-header-superior">
    <div class="loguito">
      <a href="/">
        <img
          src="/img/logo2.png"
          alt="logo"
          width=""
          class="home-header-logo"
        />
      </a>
    </div>

    <form
      action="/search"
      method="GET"
      class="home-header-buscador"
      onsubmit="return validateForm()"
    >
      <input
        type="text"
        name="keywords"
        id="searchInput"
        placeholder="Buscar..."
      />
    </form>

    <div class="fonta">
      <% if (!locals.userLogin) { %>
      <a href="#modal" class="open-modal-button"
        ><i class="fa-solid fa-user"></i>
        <span>Login</span>
      </a>
      <% }else { %>
      <a
        href="/users/profile/<%= userLogin.id %>"
        class="open-modal-button-login"
      >
        <div class="user-avatar">
          <% if (userLogin.image) { %>
          <img src="/img/<%= userLogin.image %>" />
          <% } else { %>
          <i class="fa-solid fa-user"></i>
          <% } %>
        </div>
        <span><%= userLogin.name %></span>
      </a>

      <% } %>

      <a href="#"><i class="fa-regular fa-bell fa-lg"></i></a>
      <a href="/products/shoppingCart"
        ><i class="fa-solid fa-cart-shopping"></i
      ></a>
    </div>
  </div>
  <a href=""></a>
  <script src="/js/validacionesbusqueda.js"></script>
</header>

