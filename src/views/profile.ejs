<!DOCTYPE html>
<html lang="en">

<%- include("partials/head") %>

    <body>
        <%- include("partials/header") %>

            <%- include("partials/header-nav") %>



                <div class="profile">
                    <div class="profile_box">
                        <%- include("partials/profileInit") %>
                            <form class="profile_box_form" action="" method="POST" enctype="multipart/form-data">
                                <div class="profile_box_form_boxOne">
                                    <div>
                                        <h2>Mis datos</h2>
                                    </div>
                                    <div class="profile_box_form_boxOne_image">
                                        <label for="image" class="form-label">Imagen de perfil</label>
                                        <input class="form-control" type="file" id="image" name="image"
                                            dataValue="<%= profile.image %>">

                                    </div>
                                    <div class="profile_box_form_boxOne_name">
                                        <label for="name" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="name" name="name"
                                            value="<%= profile.name %>">
                                        <span id="nameError" class="error-message"></span>
                                    </div>
                                    <div class="profile_box_form_boxOne_surname">
                                        <label for="surname" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="surname" name="surname"
                                            value="<%= profile.surname %>">
                                        <span id="surnameError" class="error-message"></span>
                                    </div>
                                    <div class="profile_box_form_boxOne_phone">
                                        <label for="phone" class="form-label">Celular</label>
                                        <input type="text" class="form-control" id="phone" name="phone"
                                            value="<%= profile.phone %>">
                                        <span id="phoneError" class="error-message"></span>
                                    </div>
                                    <div class="profile_box_form_boxOne_dni">
                                        <label for="dni" class="form-label">DNI</label>
                                        <input type="text" class="form-control" id="dni" name="dni"
                                            value="<%= profile.dni %>">
                                        <span id="dniError" class="error-message"></span>
                                    </div>
                                </div>
                                <div class="profile_box_form_boxTwo">
                                    <div>
                                        <h2>Mis direcciones</h2>
                                    </div>
                                    <div class="profile_box_form_boxTwo_lookfor">
                                        <label for="lookfor" class="form-label">Buscar dirección en Google Maps</label>
                                        <input type="text" class="form-control" id="lookfor" name="lookfor"
                                            value="<%= profile.lookfor %>">
                                    </div>
                                    <div class="profile_box_form_boxTwo_direct">
                                        <div class="profile_box_form_boxTwo_direct_street">
                                            <label for="street" class="form-label">Calle</label>
                                            <input type="text" class="form-control" id="street" name="street"
                                                value="<%= profile.street %>">
                                        </div>
                                        <div class="profile_box_form_boxTwo_direct_height">
                                            <label for="streetHeight" class="form-label">Altura</label>
                                            <input type="text" class="form-control" id="streetHeight" name="streetHeight"
                                                value="<%= profile.streetHeight %>">
                                        </div>
                                    </div>
                                    <div class="profile_box_form_boxTwo_house">
                                        <div class="profile_box_form_boxTwo__house_floor">
                                            <label for="floor" class="form-label">Piso</label>
                                            <input type="text" class="form-control" id="floor" name="floor"
                                                value="<%= profile.floor %>">
                                        </div>
                                        <div class="profile_box_form_boxTwo_house_department">
                                            <label for="door" class="form-label">Departamento</label>
                                            <input type="text" class="form-control" id="door" name="door"
                                                value="<%= profile.door %>">
                                        </div>
                                    </div>
                                    <div class="profile_box_form_boxTwo_referencia">
                                        <div class="profile_box_form_boxTwo_referencia_reference">
                                            <label for="references" class="form-label">Referencias</label>
                                            <input type="text" class="form-control" id="references" name="references"
                                                value="<%= profile.references %>">
                                        </div>
                                        <div class="profile_box_form_boxTwo_referencia_postalcode">
                                            <label for="postalcode" class="form-label">Código Postal</label>
                                            <input type="text" class="form-control" id="postalcode" name="postalcode"
                                                value="<%= profile.postalcode %>">
                                        </div>
                                    </div>
                                    <div class="profile_box_form_boxTwo_ciudad">
                                        <div class="profile_box_form_boxTwo_ciudad_province">
                                            <label for="province" class="form-label">Provincia</label>
                                            <select class="form-select" id="province" name="province">
                                                <% if (profile.province) { %><option value="<%= profile.province %>" selected><%= profile.province %></option>
                                                <% } else { %><option value="" selected hidden>Provincia...</option>
                                                <% } %></select>
                                        </div>
                                        
                                        <div class="profile_box_form_boxTwo_ciudad_location">
                                            <label for="location" class="form-label">Localidad</label>
                                            <select class="form-select" id="location" name="location" disabled>
                                                <% if (profile.location) { %><option value="<%= profile.location %>" selected><%= profile.location %></option>
                                                <% } else { %><option value="" selected hidden>Localidad...</option>
                                                <% } %> </select>
                                        </div>
                                    </div>
                                    <button type="submit" class="profile_box_form_button">Guardar</button>
                            </form>
                    </div>
                </div>
                </div>

                <script src="../../javascripts/validationProfile.js"> </script>
                <script src="\javascripts\profileApi.js"> </script>
    </body>

    <%- include('partials/footer') %>

</html>