<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %>

    <body class="body_box">
        
        <%- include("partials/header") %>
    
    
        <!----------------------------login-------------------------------------------------->
    <%- include("partials/login") %>
    

    <!--------------------------REGISTRO------------------------------------------------->
    <%- include("partials/register") %>
        
        
        <!----------------------------nav-bar ------------------------------------------------->
        <%- include("partials/header-nav") %>

    
    <main class="detail_main">
        <div class="detail_main_content">
            <div class="detail_main_contents_content">
                <div class="detail_main_contents_content_boxOne">
                    <div class="detail_main_contents_content_boxOne_images">
                        <div class="detail_main_contents_content_boxOne_images_una"><img src="/img/<%= productos.image %>" alt=""></div>
                        <div class="detail_main_contents_content_boxOne_images_muchas">
                            <div><a href=""><img src="/img/<%= productos.imageId %>" alt=""></a></div>
                            <div><a href=""><img src="/img/<%= productos.imageId %>" alt=""></a></div>
                            <div><a href=""><img src="/img/<%= productos.imageId %>" alt=""></a></div>
                        </div>
                    </div>
                    <div class="detail_main_contents_content_boxOne_product">
                        <div class="detail_main_contents_content_boxOne_product_nombre">
                            <div class="detail_main_contents_content_boxOne_product_nombre_titulo">
                                <h4><%= productos.name %></h4>
                            </div>
                            <div class="detail_main_contents_content_boxOne_product_precio" id="productPrecio" data-discount="<%= productos.discount || 0 %>">
                                <div class="detail_main_contents_content_boxOne_product_precio_descuento">
                                    <% if (productos.discount) { %>
                                        <h3 class="discounted-price">
                                            <span class="original-price">
                                                $<%= toThousand(productos.price) %>
                                            </span>
                                            $<%= toThousand(productos.price - (productos.price * productos.discount / 100)) %>
                                        </h3>
                                        <p class="discount-label"><b><%= productos.discount %>% OFF</b></p>
                                    <% } else { %>
                                        <h3>
                                            $<%= toThousand(productos.price) %>
                                        </h3>
                                    <% } %>
                                </div>
                            </div>
                            <div class="detail_main_contents_content_boxOne_product_cuotas">
                                <h3>¡Nuestras promocones bancarias!</h3>
                                <% if (productos.discount > 0) { %>
                                    <p>
                                      Precio con descuento en 3 cuotas sin interés de: $<%= toThousand((productos.price - (productos.price * productos.discount / 100)) / 3) %>
                                    </p>
                                  <% } else { %>
                                    <p>
                                      Precio en 3 cuotas sin interés de $<%= toThousand(productos.price / 3) %>
                                    </p>
                                  <% } %>
                                <div>
                                    <i class="fa-brands fa-cc-visa"></i>
                                    <i class="fa-brands fa-cc-paypal"></i>
                                    <i class="fa-brands fa-cc-mastercard"></i>
                                </div>
                                <div class="detail_main_contents_content_boxOne_product_cuotas_pagos">
                                    <p>cantidades de cuotas 3, 6, 9</p>
                                </div>
                                <div class="detail_main_contents_content_boxOne_product_cuotas_medios">
                                    <a href="">Ver todos los medios de pago</a>
                                </div>
                            </div>
                            <div class="detail_main_contents_content_boxOne_product_envios">
                                <div class="detail_main_contents_content_boxOne_product_envios_gratis">
                                    <i class="fa-solid fa-truck"></i>
                                    <p>¿tiene envio gratis?: <b><%= productos.shipment %></b></p>
                                </div>
                                <div class="detail_main_contents_content_boxOne_product_envios_sucursal">
                                    <i class="fa-solid fa-shop"></i>
                                    <p>Este producto no puede retirarse en sucursales</p>
                                </div>
                                
                            </div>
                            <div class="detail_main_contents_content_boxOne_product_comprar">
                                <a href="">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="detail_main_contents_content_boxTwo">
                    <div class="detail_main_contents_content_boxTwo_cajas">
                        <h2>Caracteristicas</h2>
                        <div class="detail_main_contents_content_boxTwo_cajas_caracte">
                            <div class="detail_main_contents_content_boxTwo_cajas_caracte_mayus"><p><%= productos.brand %></p></div>
                                <p>Stock: <%= productos.amount %></p>
                                <p>categoryId: <%= productos.categoryId %></p>
                            <p><%= productos.description %></p>
                        </div>
                    </div>
                </div>
                <div class="detail_main_contents_content_boxThree">
                    <div class="detail_main_contents_content_boxThree_carrusel">
                        
                        <div class="carrusel2">
                            <div class="carousel-container">
                                <h2>Productos Relacionados</h2>

                                <div class="carousel-item2">
                                    <% productosRelacionados.forEach(function(producto) { %>
                                        
                                            <div class="home-main-articulos4">
                                                <a class="home-main-articulos-a4" href="/products/productDetail/<%= producto.id %>">
                                                    <img src="/img/<%= producto.image %>" alt="">
                                                    
                                                    <div class="envio4"> <p class="envio-p4">envío gratis</p></div>
                                                    <div class="carro-item4"><a class="carritoto4" href="/products/shoppingcart"><i class="fa-solid fa-cart-shopping"></i></a></div>
                                                    <a class="mensaje-carrito4" href="/products/shoppingcart">Agregar al carrito</a>
                                                    <p class="home-main-articulos-p4"><%= producto.name %></p>
                                                    <span>$<%= toThousand(producto.price) %></span>
                                                    <button class="mensaje-comprar4" type="button"  onclick=" addItemToCart(1,'<%=producto.id%>')">Comprar ahora</button>
                                                </a>
                                            </div>
                                        
                                    <% }) %>
                                </div>
                                
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <script src="/javascripts/productDetailFront.js"></script>
    <%- include('partials/footer') %>

</body>

</html>